@model FilmyKategorie
@{
    Layout = "_layout";
    ViewData["Title"] = "lista filmów";
}
<head>
    <link href ="~/css/site.css" rel="stylesheet"/>
</head>
<hl>
    Top 3 najnowsze filmy
</hl>
<table>
    <tr>
        @foreach(var film in Model.FilmyNajnowsze)
            {
                <td>
                    <h6>
                        @film.Tytul
                        <p>
                            @film.Opis
                        </p>
                    </h6>
                </td>
            }
    </tr>
</table>
<hl>
    Top 3 najdłuższe filmy
</hl>
<table>
    <tr>
        @foreach (var film in Model.FilmyNajdluzsze)
        {
            <td>
                <h6>
                    @film.Tytul - @film.DlugoscFilmu min|
                    
                </h6>
            </td>
        }
    </tr>
</table>
    <table>
        <thead>
            <tr>
                <th>Tytuł</th>
                <th>Reżyser</th>
                <th>Data dodania</th>
                <th>Cena</th>
                <th>Długość</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var film in Model.FilmyKategoria)
            {
            <tr>
                <td>@film.Tytul</td>

                <td>@film.Rezyser</td>

                <td>@film.DataDodania.ToString()</td>

                <td>@film.Cena</td>

                <td>@film.DlugoscFilmu</td>
                <td><a href="@Url.Action("Szczegoly","Filmy", new {idFilmu = film.Id})">&#128269;</a></td>
                <td><a href ="@Url.Action("Kup", "Koszyk", new { id = film.Id })">&#128722;</a></td>
            </tr>
            }
        </tbody>
    </table>

