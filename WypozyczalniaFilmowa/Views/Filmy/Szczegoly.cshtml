@model Film
<link href="~/css/site.css" rel="stylesheet" />
<button onclick="window.location.href ='@Url.Action("EdytujFilm","Filmy", new {id=Model.Id})'">Edytuj</button>
<table>
    <tr>
        <td>
            @Model.Tytul
        </td>
        <td>
            <ul>
                <li>
                    <img src="~/plakaty/@Model.Plakat" width="400px" />
                </li>
                <li>
                    @Model.Rezyser
                </li>
                <li>
                    @Model.Opis
                </li>
                <li>
                    @Model.DataDodania
                </li>
                <li>
                    @Model.Cena
                </li>
            </ul>
        </td>
    </tr>
</table>