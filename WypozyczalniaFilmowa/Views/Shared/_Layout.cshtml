
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WypozyczalniaFilmowa</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        @await (Component.InvokeAsync("Menu"))
    </header>
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <footer class="border-top footer text-muted">
            <nav>
                <ul>
                    <li><a href="@Url.Action("StronyStatyczne", "Home", new { nazwa = "Onas"})">O nas</a></li>
                    <li><a href="@Url.Action("StronyStatyczne", "Home", new { nazwa = "Info"})">Info</a></li>
                    <li><a href="@Url.Action("StronyStatyczne", "Home", new { nazwa = "Omnie"})">O mnie</a></li>
                    <li><a href="@Url.Action("StronyStatyczne", "Home", new { nazwa = "Kontakt"})">Kontakt</a></li>
                    <li><a href="@Url.Action("DodajFilm","filmy")">Dodaj Film</a></li>
                </ul>
            </nav>
        </footer>
        @RenderSection("Scripts", required:false)
        
    </body>
  
